pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven"

    }

    stages {
        stage('Build Maven') {
            steps {
                // Get some code from a GitHub repository
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/vikramsisodia27/springboot-k8']])

                // Run Maven on a Unix agent.
                sh "mvn clean install"
            }
        }

         stage('Create Docker Image') {
            steps {
             sh "docker build -t ${docker_username}/springboot-k8 ."
            }
        }

        stage('Push image to Hub'){
                            steps{
                                script{
                                   withCredentials([string(credentialsId: 'docker_password_id', variable: 'docker_password')]) {
                                      sh 'docker login -u ${docker_username} -p ${docker_password}'
                                   }
                                   sh 'docker push ${docker_username}/springboot-k8:latest'
                                }
                            }
                        }

         stage('Run ansible playbook') {
            steps {
                sh '''
                    ansible --version
                    ansible-playbook ansible.yml
                 '''
            }
        }
    }
}
