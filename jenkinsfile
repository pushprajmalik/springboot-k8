pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven"

    }

    stages {
        stage('Build Maven') {
            steps {
                // Get some code from a GitHub repository
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/pushprajmalik/springboot-k8']])

                // Run Maven on a Unix agent.
                sh "mvn clean install"
            }
        }

         stage('Create Docker Image') {
            steps {
             sh "docker build -t pushprajmalik@gmail.com/springboot-k8 ."
            }
        }

        stage('Push image to Hub'){
                            steps{
                                script{
                                   withCredentials([string(credentialsId: 'docker_password_id', variable: 'docker_password')]) {
                                      sh 'docker login -u pushprajmalik@gmail.com -p Apple@123'
                                   }
                                   sh 'docker push pushprajmalik@gmail.com/springboot-k8:latest'
                                }
                            }
                        }

         
    }
}
